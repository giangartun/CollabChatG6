{
  "compilerOptions": {
    /* Directorios */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Entorno Node.js */
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Mapas y declaraciones */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Reglas estrictas */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
